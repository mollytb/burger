<div class="container">
 <div class="row">
  <div class="col-6">
    <h2>Available Burgers!</h2>

    <ul>
      {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=false}} {{/unless}} {{/each}}
    </ul>
  </div>
  <div class="text-center col-6">
    <h2>Devoured Burgers!</h2>

    <ul>
      {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
    </ul>
  </div>
</div>
<h2 class="text-center">Create a Burger</h2>
<form class="text-center create-form">

  <div class="text-center form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burger_name">
  </div>

  <button class="btn btn-dark" type="submit">Add Burger</button>
</form>
</div>
